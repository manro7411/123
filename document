useEffect(() => {
  const video = videoRef.current;
  if (!video) return;

  const enforce = () => {
    if (video.playbackRate !== 1) {
      console.warn("â›” speed hack blocked");
      video.playbackRate = 1;
    }
  };

  video.addEventListener("ratechange", enforce);
  return () => video.removeEventListener("ratechange", enforce);
}, []);
