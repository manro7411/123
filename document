// src/components/Reward.tsx
import { useState, useEffect, useMemo } from "react";
import axios from "axios";
import { useUserProfile } from "../Lesson/hooks/useUserProfile";
import { usePointHistory } from "./hooks/userPointHistory";

interface Coupon {
  id: string;
  couponCode: string;
  couponTitle: string;
  couponDescription: string;
  pointsRequired: number;
  active: boolean;
  currentUserPoints?: number;
}

type RewardProps = {
  userPoints: number; // initial balance from parent
  token: string;
};

const Reward = ({ userPoints, token }: RewardProps) => {
  const [coupons, setCoupons] = useState<Coupon[]>([]);
  const [loadingCouponId, setLoadingCouponId] = useState<string | null>(null);

  // Optimistic UI: hide immediately when user clicks redeem
  const [hiddenIds, setHiddenIds] = useState<Set<string>>(new Set());
  const [hiddenCodes, setHiddenCodes] = useState<Set<string>>(new Set());

  // Track remaining points locally (optimistic)
  const [remainingPoints, setRemainingPoints] = useState<number>(userPoints);
  useEffect(() => setRemainingPoints(userPoints), [userPoints]);

  const { email } = useUserProfile(token);
  const { HistoryDetails } = usePointHistory(token);

  // Build a redeemed registry from history by BOTH id and code
  const redeemedKeys = useMemo(() => {
    const ids = new Set<string>();
    const codes = new Set<string>();
    for (const h of HistoryDetails) {
      if (h.isRedeemed) {
        if (h.couponId) ids.add(h.couponId);
        if (h.couponCode) codes.add(h.couponCode);
      }
    }
    return { ids, codes };
  }, [HistoryDetails]);

  const isCouponRedeemedFromHistory = (c: Coupon) =>
    redeemedKeys.ids.has(c.id) || redeemedKeys.codes.has(c.couponCode);

  const isCouponHiddenOptimistically = (c: Coupon) =>
    hiddenIds.has(c.id) || hiddenCodes.has(c.couponCode);

  useEffect(() => {
    const fetchCoupons = async () => {
      try {
        const res = await axios.get(
          "http://localhost:8080/coupon-usage-tracking/Get-All-Coupons-For-User",
          { headers: { Authorization: `Bearer ${token}` } }
        );
        if (Array.isArray(res.data)) {
          setCoupons(res.data);
        }
      } catch (err) {
        console.error("Failed to fetch coupons:", err);
      }
    };
    fetchCoupons();
  }, [token]);

  const handleRedeem = async (coupon: Coupon) => {
    // Block duplicate redeem attempts (history or current optimistic state)
    if (isCouponRedeemedFromHistory(coupon) || isCouponHiddenOptimistically(coupon)) return;

    // Use local remaining points (not the stale prop)
    if (remainingPoints < coupon.pointsRequired) {
      alert("คะแนนไม่พอสำหรับคูปองนี้");
      return;
    }

    // Optimistic: hide immediately and set loading for this coupon
    setHiddenIds((s) => new Set(s).add(coupon.id));
    setHiddenCodes((s) => new Set(s).add(coupon.couponCode));
    setLoadingCouponId(coupon.id);

    const nextPoints = remainingPoints - coupon.pointsRequired;

    const payload = {
      id: crypto.randomUUID(),
      userEmail: email,
      couponCode: coupon.couponCode,
      couponTitle: coupon.couponTitle,
      couponDescription: coupon.couponDescription,
      userEarnPoints: coupon.pointsRequired,
      couponId: coupon.id,
      redeemTime: new Date().toISOString(),
      currentUserPoints: nextPoints,
    };

    try {
      await axios.post(
        "http://localhost:8080/coupon-usage-tracking/coupon-redemptions",
        payload,
        { headers: { Authorization: `Bearer ${token}` } }
      );

      // Keep UI small and consistent with server by pruning redeemed coupon
      setCoupons((prev) =>
        prev.filter(
          (c) => c.id !== coupon.id && c.couponCode !== coupon.couponCode
        )
      );
      setRemainingPoints(nextPoints);

      alert(`คุณได้ Redeem ${coupon.couponTitle} เรียบร้อยแล้ว!`);
    } catch (err: any) {
      // Rollback optimistic hide on failure
      setHiddenIds((s) => {
        const n = new Set(s);
        n.delete(coupon.id);
        return n;
      });
      setHiddenCodes((s) => {
        const n = new Set(s);
        n.delete(coupon.couponCode);
        return n;
      });

      // Optional: surface BE message if exists
      const msg =
        err?.response?.status === 409
          ? "คุณได้ Redeem คูปองนี้ไปแล้ว"
          : "Redeem failed.";
      alert(msg);
      console.error(err);
    } finally {
      setLoadingCouponId(null);
    }
  };

  // Only show coupons that are not redeemed historically and not optimistically hidden
  const visibleCoupons = useMemo(
    () =>
      coupons.filter(
        (c) =>
          !isCouponRedeemedFromHistory(c) && !isCouponHiddenOptimistically(c)
      ),
    [coupons, redeemedKeys, hiddenIds, hiddenCodes]
  );

  return (
    <div className="space-y-4">
      <div className="flex items-baseline justify-between">
        <h2 className="text-xl font-bold text-gray-800">Reward Coupons</h2>
        <div className="text-sm text-gray-700">
          Remaining points: <span className="font-semibold">{remainingPoints}</span>
        </div>
      </div>

      {visibleCoupons.length === 0 ? (
        <div className="text-gray-500">No coupons available.</div>
      ) : (
        visibleCoupons.map((coupon) => {
          const isProcessing = loadingCouponId === coupon.id;
          const canRedeem =
            coupon.active && remainingPoints >= coupon.pointsRequired && !isProcessing;

          return (
            <div
              key={`${coupon.id}-${coupon.couponCode}`}
              className="flex items-center justify-between bg-blue-100 px-6 py-4 rounded-full shadow text-sm"
            >
              <div>
                <div className="text-base font-semibold text-blue-800">
                  {coupon.couponTitle}
                </div>
                <div className="text-xs text-blue-600">
                  {coupon.pointsRequired} points to redeem
                </div>
                <div className="text-xs text-gray-700">
                  {coupon.couponDescription}
                </div>
              </div>
              <button
                disabled={!canRedeem}
                onClick={() => handleRedeem(coupon)}
                className={`px-4 py-1 rounded-full font-medium ${
                  canRedeem
                    ? "bg-blue-600 hover:bg-blue-700 text-white"
                    : "bg-gray-300 text-gray-500 cursor-not-allowed"
                }`}
              >
                {isProcessing ? "Processing..." : "Redeem"}
              </button>
            </div>
          );
        })
      )}
    </div>
  );
};

export default Reward;
