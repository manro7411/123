  category?: string;
  level?: "Beginner" | "Intermediate" | "Advanced";
  durationMin?: number;
  tags?: string[];
};

export type AssignmentDraft = {
  assignees: string[]; // userIds (email/userId)
  courseIds: string[];
  dueDate?: string; // YYYY-MM-DD
  defaultTitle: string;
  defaultCategory: string;
  createIfMissing: boolean;
};

